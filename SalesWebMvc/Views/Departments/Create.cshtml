@model SalesWebMvc.Models.Department

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4 class="text-primary">Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label text-primary"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-dark"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="margin-top: 5px !important; background-color: #593196 !important; border: none !important;"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-primary" style="text-decoration: none !important;"><i class='bx bx-arrow-back'></i> Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
